<UserControl x:Class="WarehouseMgr.Controls.Dashboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
			 xmlns:my="clr-namespace:WarehouseMgr.Controls"
			 xmlns:ut="clr-namespace:WarehouseMgr.Utilites"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
	<UserControl.Resources>
		<ut:AddressConverter x:Key="c1"/>
	</UserControl.Resources>
    <Grid>
		<Border HorizontalAlignment="Center" VerticalAlignment="Center" >
			<TextBlock Text="{Binding Converter={StaticResource c1}}"/>
		</Border>
	</Grid>
</UserControl>
